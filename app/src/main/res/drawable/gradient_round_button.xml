<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="@dimen/_20sdp" />
            <gradient android:angle="180" android:endColor="@color/gradient_pink" android:startColor="@color/gradient_orange" android:type="linear"></gradient>

        </shape>
    </item>

    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">


            <corners android:radius="@dimen/_20sdp" />
            <gradient android:endColor="@color/gradient_pink" android:startColor="@color/gradient_orange" android:type="linear"></gradient>

        </shape>
    </item>
</selector>