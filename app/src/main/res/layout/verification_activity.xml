<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ImageView
            android:id="@+id/img_side_bar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:src="@drawable/back_arrow" />

        <TextView
            android:id="@+id/txt_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="Mobile verification"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_header"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp"
            android:text="Please enter your pin code which you recived on your mobile"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <LinearLayout
            android:id="@+id/ll_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_details"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/edt_first_num"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/edit_light_bg"
                android:clickable="false"
                android:gravity="center"

                android:inputType="none"
                android:maxLength="1"
                android:textColor="@color/red"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/edt_second_num"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/edit_light_bg"
                android:clickable="false"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/red"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/edt_thired_num"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/edit_light_bg"
                android:clickable="false"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/red"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/edt_fourth_num"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/edit_light_bg"
                android:clickable="false"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/red"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/edt_fifth_num"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/edit_light_bg"
                android:clickable="false"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/red"
                android:textSize="24sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/edt_sixth_num"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/edit_light_bg"
                android:clickable="false"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/red"
                android:textSize="24sp"
                android:textStyle="bold"
                android:visibility="visible" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_dontget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_code"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Don't get code?"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_resend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_dontget"
            android:layout_centerHorizontal="true"
            android:text="RESEND"
            android:textColor="@color/red"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/ll_line_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_resend"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_one"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/edit_light_bg"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/txt_two"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/edit_light_bg"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/black"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/txt_three"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@drawable/edit_light_bg"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/black"
                android:textSize="22sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_line_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_line_one"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_four"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/edit_light_bg"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/black"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/txt_five"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/edit_light_bg"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/black"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/txt_six"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@drawable/edit_light_bg"
                android:gravity="center"
                android:text="6"
                android:textColor="@color/black"
                android:textSize="22sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_line_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_line_two"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_seven"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/edit_light_bg"
                android:gravity="center"
                android:text="7"
                android:textColor="@color/black"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/txt_eight"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/edit_light_bg"
                android:gravity="center"
                android:text="8"
                android:textColor="@color/black"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/txt_nine"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@drawable/edit_light_bg"
                android:gravity="center"
                android:text="9"
                android:textColor="@color/black"
                android:textSize="22sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_line_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_line_three"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_close"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/edit_light_bg"
                android:gravity="center"
                android:text="X"
                android:textColor="@color/black"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/txt_zero"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/edit_light_bg"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="22sp" />

            <ImageView
                android:id="@+id/img_clear"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@drawable/clear_btn"
                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:gravity="center"
            android:visibility="gone">

            <ProgressBar
                android:id="@+id/progress"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </RelativeLayout>

</layout>