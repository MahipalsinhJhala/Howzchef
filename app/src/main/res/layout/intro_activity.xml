<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/splash_meggi"
            android:layout_alignParentRight="true"/>

        <ImageView
            android:id="@+id/tometo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/splash_tometo"
            android:layout_marginTop="40dp"/>

        <TextView
            android:id="@+id/txt_welcom_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:text="Hello ...!!\nWelcome to houzChf"/>

        <ImageView
            android:id="@+id/splash_logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/splash_logo"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txt_welcom_msg"/>

        <TextView
            android:id="@+id/txt_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/light_gray"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/splash_logo"
            android:text="Lorem Ipsum is simply dummy text of the printing
and typesetting industry. Lorem Ipsum has
been the industry's standard dummy text."/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/very_light_gray">

            <Button
                android:id="@+id/btn_sgin_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/red_btn"
                android:text="SIGN IN"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:layout_margin="20dp"/>

            <TextView
                android:id="@+id/txt_sign_up_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Donâ€™t have account? SIGN UP"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/btn_sgin_in"
                android:layout_marginBottom="20dp"/>

        </RelativeLayout>

    </RelativeLayout>

</layout>