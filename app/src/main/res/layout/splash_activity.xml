<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/splash_meggi"
            android:layout_alignParentRight="true"/>

        <ImageView
            android:id="@+id/tometo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/splash_tometo"
            android:layout_marginTop="40dp"/>

        <ImageView
            android:id="@+id/splash_pepper"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/splash_pepper"
            android:layout_alignParentBottom="true"/>

        <ImageView
            android:id="@+id/splash_pizza"
            android:layout_width="155dp"
            android:layout_height="155dp"
            android:src="@drawable/splash_pizza"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>

        <ImageView
            android:id="@+id/splash_logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/splash_logo"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

</layout>